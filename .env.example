# 数据库配置
NEO4J_URL=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your_password

# StarRocks配置
STARROCKS_HOST=localhost
STARROCKS_PORT=9030
STARROCKS_USER=root
STARROCKS_PASSWORD=
STARROCKS_DATABASE=knowledge_base

# Redis配置
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# MinIO配置
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET_NAME=knowledge-base
MINIO_SECURE=false

# LLM配置
LLM_API_KEY=your_api_key
LLM_MODEL=qwen-max
LLM_BASE_URL=https://dashscope.aliyuncs.com/compatible-mode/v1
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=2048

# OCR服务配置
OCR_SERVICE_URL=http://localhost:8002
OCR_MAX_FILE_SIZE=10485760
OCR_SUPPORTED_FORMATS=pdf,png,jpg,jpeg,tiff,bmp

# Flink配置
FLINK_JOBMANAGER_URL=http://localhost:8081
FLINK_PARALLELISM=2
FLINK_CHECKPOINT_INTERVAL=60000

# 应用配置
APP_NAME=Enterprise Knowledge Base
APP_VERSION=1.0.0
APP_DEBUG=true
APP_HOST=0.0.0.0
APP_PORT=8000

# 安全配置
SECRET_KEY=your-secret-key-here
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# 日志配置
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE_PATH=logs/app.log
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5

# 向量配置
VECTOR_DIMENSION=1536
VECTOR_SIMILARITY_THRESHOLD=0.7
VECTOR_TOP_K=10

# 知识图谱配置
KG_CONFIDENCE_THRESHOLD=0.8
KG_MAX_ENTITIES_PER_DOCUMENT=100
KG_MAX_RELATIONS_PER_DOCUMENT=200

# ETL配置
ETL_BATCH_SIZE=100
ETL_RETRY_ATTEMPTS=3
ETL_RETRY_DELAY=5

# 缓存配置
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# 监控配置
METRICS_ENABLED=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30

# Dify集成配置
DIFY_API_URL=http://localhost:5001
DIFY_API_KEY=your_dify_api_key
DIFY_WORKSPACE_ID=your_workspace_id