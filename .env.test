# 测试环境配置
# 应用配置
APP_NAME=Enterprise Knowledge Base Test
APP_VERSION=1.0.0
APP_DEBUG=true
APP_HOST=0.0.0.0
APP_PORT=8000

# 安全配置
SECRET_KEY=test-secret-key-for-testing-only
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Neo4j配置
NEO4J_URL=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=test_password

# MySQL配置
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=test_user
MYSQL_PASSWORD=test_password
MYSQL_DATABASE=test_erag_metadata

# StarRocks配置
STARROCKS_HOST=localhost
STARROCKS_PORT=9030
STARROCKS_USER=root
STARROCKS_PASSWORD=test_password
STARROCKS_DATABASE=test_knowledge_base

# Redis配置
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=1

# MinIO配置
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET_NAME=test-knowledge-base
MINIO_SECURE=false

# LLM配置
LLM_API_KEY=test-api-key
LLM_MODEL=qwen-max
LLM_BASE_URL=https://dashscope.aliyuncs.com/compatible-mode/v1
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=2048

# OCR服务配置
OCR_SERVICE_URL=http://localhost:8002
OCR_MAX_FILE_SIZE=10485760
OCR_SUPPORTED_FORMATS=pdf,png,jpg,jpeg,tiff,bmp

# Flink配置
FLINK_JOBMANAGER_URL=http://localhost:8081
FLINK_PARALLELISM=2
FLINK_CHECKPOINT_INTERVAL=60000

# 日志配置
LOG_LEVEL=DEBUG
LOG_FORMAT=json
LOG_FILE_PATH=logs/test.log
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5

# 向量配置
VECTOR_DIMENSION=1536
VECTOR_SIMILARITY_THRESHOLD=0.7
VECTOR_TOP_K=10

# 知识图谱配置
KG_CONFIDENCE_THRESHOLD=0.8
KG_MAX_ENTITIES_PER_DOCUMENT=100
KG_MAX_RELATIONS_PER_DOCUMENT=200

# 缓存配置
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# 任务配置
TASK_TIMEOUT=300
TASK_MAX_RETRIES=3
TASK_RETRY_DELAY=5